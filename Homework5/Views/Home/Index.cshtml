@model IEnumerable<Homework5.Models.MovieViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form method="get">
    <input type="search" name="searchTerm" />
    <input type="submit" value="Search" />
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LengthInMinutes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Format)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.NumTags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IMDBurl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LengthInMinutes)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Format)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.NumTags)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IMDBurl)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Tags", "Tags", new { id=item.Id})
        </td>
    </tr>
}

</table>

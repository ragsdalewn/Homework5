@model Homework5.Models.TagViewModel

@{
    ViewBag.Title = "Delete Tag";
}

<h2>@Model.MovieTitle</h2>

<h3>Are you sure you want to delete this tag?</h3>
<fieldset>
    <legend>TagViewModel</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Date)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Date)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.MovieTag)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.MovieTag)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete Tag" /> |
       @Html.ActionLink("Back to List", "Tags", new {id = Model.MovieId })
    </p>
}

@model Homework5.Models.TagViewModel

@{
    ViewBag.Title = "Edit Tag";
}

<h2>@Model.MovieTitle</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tag</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.MovieId)


        <div class="editor-label">
            @Html.LabelFor(model => model.MovieTag)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MovieTag)
            @Html.ValidationMessageFor(model => model.MovieTag)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Movie Tags", "Tags", new {id = Model.MovieId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

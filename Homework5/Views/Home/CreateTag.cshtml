@model Homework5.Models.TagViewModel

@{
    ViewBag.Title = "CreateTag";
}

<h2>Create A New Tag</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TagViewModel</legend>
            @Html.HiddenFor(model => model.MovieId)
    
        <div class="editor-label">
            @Html.LabelFor(model => model.MovieTag)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MovieTag)
            @Html.ValidationMessageFor(model => model.MovieTag)
        </div>

        <p>
            <input type="submit" value="CreateTag" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Tags")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
